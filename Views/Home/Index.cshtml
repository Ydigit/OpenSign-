@{
    Layout = "_Layout";
    ViewData["Title"] = "Página Inicial";
}

<div id="particles-js"></div>

<div class="text-center content">
    <h1 class="display-4">Welcome to OpenSign</h1>
    <p>Learn more about <a href="https://learn.microsoft.com/aspnet/core">ASP.NET Core</a> and <strong>cryptography</strong>.</p>

    <div class="container mt-5">
        <div class="row justify-content-center g-5">
            <!-- Card 1 -->
            <div class="col-md-4">
                <div class="card bg-dark text-white shadow h-100 d-flex flex-column justify-content-between p-3">
                    <div class="text-center">
                        <img src="@Url.Content("~/img/indexImgs/key.png")" alt="Keys" style="width: 190px; object-fit: contain;">
                    </div>

                    <div class="mt-3">
                        <h5 class="card-title">Secure Key Generation</h5>
                        <p class="card-text">
                            Generate RSA keys with variable sizes, encrypted using AES-256-CBC or AES-256-CTR for secure storage.
                        </p>
                    </div>

                    <div class="text-center mt-3">
                        <a href="/Generate" class="btn btn-warning w-100">Go to Key Generation</a>
                    </div>
                </div>
            </div>


            <!-- Card 2 -->
            <div class="col-md-4">
                <div class="card bg-dark text-white shadow h-100 d-flex flex-column justify-content-between p-3">
                    <!-- Imagem -->
                    <div class="text-center">
                        <img src="@Url.Content("~/img/indexImgs/sign.png")" alt="Sign" style="width: 190px; object-fit: contain;">
                    </div>

                    <!-- Texto -->
                    <div class="mt-3">
                        <h5 class="card-title">Signature with Alternatives</h5>
                        <p class="card-text">
                            Create documents with dynamic fields and sign each combination using RSA or HMAC with a secret passphrase.
                        </p>
                    </div>

                    <!-- Botão -->
                    <div class="text-center mt-3">
                        <a href="/Sign" class="btn btn-warning w-100">Go to Sign Workflow</a>
                    </div>
                </div>
            </div>

            <!-- Card 3 -->
            <div class="col-md-4">
                <div class="card bg-dark text-white shadow h-100 d-flex flex-column justify-content-between p-3">
                    <div class="text-center">
                        <img src="@Url.Content("~/img/indexImgs/verify.png")" alt="Verify" style="width: 190px; object-fit: contain;">
                    </div>

                    <div class="mt-3">
                        <h5 class="card-title">Signature Verification</h5>
                        <p class="card-text">
                            Fill in a document and verify your combination using allowed RSA signatures or valid HMACs per combination.
                        </p>
                    </div>

                    <div class="text-center mt-3">
                        <a href="/VerifyPage" class="btn btn-warning w-100">Go to Validation Workflow</a>

                    </div>
                </div>
            </div>

        </div>
    </div>




</div>
    </div>


</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show text-center mt-3" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show text-center mt-3" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@section Styles {
    <link rel="stylesheet" href="~/css/Index.css" />
}
@section Scripts {
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script src="~/js/site.js"></script>
}