@{
    Layout = "_Layout";
    ViewData["Title"] = "About Us";
}

<div id="particles-js"></div>

<div class="content">
    <h1 class="display-4">About Us</h1>
</div>

<div class="about-wrapper">
    <!-- TEXTO -->
    <div class="about-container">
        <p>
            We are a group of Computer Science and Engineering students at the
            <a class="link-university" href="https://www.ubi.pt">University of Beira Interior</a>,
            united by curiosity, critical thinking, and a shared passion for exploring the world of digital security.
        </p>
        <p>
            For this project, we developed an innovative application that enables digital signatures on documents
            with flexible fields — such as variable dates or multiple predefined choices — addressing real-world needs
            for adaptable yet secure document handling.
        </p>
        <p>
            Our mission is to create a solution that is simple, secure, and user-friendly, incorporating digital
            signature mechanisms, key generation and protection, and signature validation processes.
        </p>
    </div>

    <!-- EQUIPA -->
    <div class="team-section">

        <!-- Membro 1 -->
        <div class="team-member">
            <div class="flip-card">
                <div class="flip-face flip-front">
                    <img src="@Url.Content("~/img/us/Dinis.jpg")" alt="Dinis Ramos">
                </div>
                <div class="flip-face flip-back">
                    UI/UX & Verification Team.
                </div>
            </div>
            <div class="member-name">Dinis Ramos</div>
        </div>

        <!-- Membro 2 -->
