@{
    ViewData["Title"] = "Generate HMAC Signatures";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div>
        <label for="hmacKey">HMAC Key (secret):</label>
        <input type="password" id="hmacKey" name="hmacKey" placeholder="Enter secret key" required />
    </div>

    <button type="submit">Generate HMAC Signatures</button>
</form>

@if (TempData["Error"] != null)
{
    <div style="color: red;">@TempData["Error"]</div>
}

@if (ViewBag.HmacResult != null)
{
    <h3>Signed Combinations:</h3>
    <pre>@ViewBag.HmacResult</pre>
}

@section Styles {
    <link rel="stylesheet" href="~/css/Generate.css" />
}
@section Scripts {
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script src="~/js/site.js"></script>
}
