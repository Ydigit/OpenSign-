@{
    ViewData["Title"] = "Importar Chave Privada";
}
<div id="particles-js"></div>

<div class="container mt-4">
    <h2>Importar Chave Privada</h2>
    <form asp-controller="Import" asp-action="Decifrar" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="keyFile">Ficheiro da chave cifrada (.json)</label>
            <input type="file" name="keyFile" class="form-control" required />
        </div>
        <div>
            <label for="pss">Password for Key Encryption</label>
            <div class="input-group">
                <input type="password" id="pss" name="pss" class="form-control" placeholder="Introduce your secure Password" required>
                <button type="button" class="btn btn-outline-secondary" id="togglePassword">
                    <i class="bi bi-eye"></i>
                </button>
            </div>
        </div>

        <button type="submit">Gerar Chaves</button>
    </form>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info mt-3">@ViewBag.Message</div>
    }

    @if (ViewBag.DecryptedPrivateKey != null)
    {
        <div class="alert alert-success mt-3">
            <strong>Chave Privada Decifrada:</strong>
            <pre>@ViewBag.DecryptedPrivateKey</pre>
        </div>
    }

    @if (ViewBag.DecryptedPublicKey != null)
    {
        <div class="alert alert-success mt-3">
            <strong>Chave PÃºblica Decifrada:</strong>
            <pre>@ViewBag.DecryptedPublicKey</pre>
        </div>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/Import.css" />
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script src="~/js/site.js"></script>
}
