@{
    ViewData["Title"] = "Escolher e Assinar";
}

<h2>Escolher e Assinar</h2>

<div id="particles-js"></div>


<form method="post" enctype="multipart/form-data" asp-controller="ImportDocument" asp-action="ImportDocument">
    <div class="mb-3">
        <label for="jsonFile" class="form-label">Selecione o arquivo JSON gerado</label>
        <input type="file" id="jsonFile" name="jsonFile" class="form-control" accept=".json" />
    </div>
    <div class="mb-3">
        <label for="keyJsonFile" class="form-label">Selecione o arquivo JSON chave publica</label>
        <input type="file" id="keyJsonFile" name="keyJsonFile" class="form-control" accept=".json" />
    </div>
    <button type="submit" class="btn btn-success mt-3">Carregar JSON</button>
</form>



@if (ViewBag.Template != null)
{
<hr />
<form method="post" asp-controller="ImportDocument" asp-action="ImportDocument">
    <input type="hidden" name="template" value="@ViewBag.Template" />
    <input type="hidden" name="signedCombinations" value="@Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.SignedCombinations)" />
    <input type="hidden" name="PublicKey" value="@ViewBag.PublicKey" />

    @foreach (var item in (Dictionary<string, object>)ViewBag.Placeholders)
        {
    <div class="mb-3">
        <label>@item.Key</label>
        @if (item.Value is Newtonsoft.Json.Linq.JArray opcoes)
                {
        <select name="@item.Key" class="form-control">
            @foreach (var opcao in opcoes)
                        {
            <option value="@opcao">@opcao</option>
                        }
        </select>
                }
                else
                {
        <input type="text" name="@item.Key" class="form-control" />
                }
    </div>
        }

    <button type="submit" class="btn btn-primary">Assinar Documento</button>
</form>
}

@if (ViewBag.OutputJson != null)
{
    <hr />
    <div class="card mt-4">
        <div class="card-header bg-light">
            <h4 class="mb-0">Resultado da Validação</h4>
        </div>
        <div class="card-body">
            @if (ViewBag.AssinaturaValida == true)
            {
                <div class="alert alert-success d-flex align-items-center" role="alert">
                    <svg xmlns="http://www.w3.org/2000/svg" class="bi bi-check-circle-fill me-2" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M16 8A8 8 0 11.001 8a8 8 0 0115.998 0zM6.904 10.803l-2.646-2.647.707-.707L6.904 9.39l4.647-4.647.707.707-5.354 5.353z"/>
                    </svg>
                    Assinatura válida. O conteúdo do documento é autêntico.
                </div>
            }
            else
            {
                <div class="alert alert-danger d-flex align-items-center" role="alert">
                    <svg xmlns="http://www.w3.org/2000/svg" class="bi bi-x-circle-fill me-2" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M16 8A8 8 0 11.001 8a8 8 0 0115.998 0zM4.646 4.646a.5.5 0 10-.708.708L7.293 8l-3.355 3.354a.5.5 0 10.708.708L8 8.707l3.354 3.355a.5.5 0 00.708-.708L8.707 8l3.355-3.354a.5.5 0 00-.708-.708L8 7.293 4.646 4.646z"/>
                    </svg>
                    Assinatura inválida. O documento pode ter sido alterado.
                </div>
            }

            <div class="mb-3">
                <label class="form-label fw-bold">Assinatura (Base64):</label>
                <textarea class="form-control" rows="5" readonly>@(ViewBag.AssinaturaValida != null ? Newtonsoft.Json.JsonConvert.DeserializeObject<dynamic>(ViewBag.OutputJson)?.signature : "Não disponível")</textarea>
            </div>

        </div>
    </div>
}



@section Styles {
    <link rel="stylesheet" href="~/css/Generate.css" />
}

<script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>

<script src="~/js/site.js"></script>

